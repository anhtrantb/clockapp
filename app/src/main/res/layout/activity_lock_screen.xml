<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.LockScreenActivity">

    <RelativeLayout
        android:id="@+id/layout_alarm"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="35dp"
            android:text="Đã đến giờ báo thức \n chạm để tắt"
            android:textAlignment="center"
            android:textSize="35sp" />

        <ImageView
            android:id="@+id/imgClock"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:layout_centerInParent="true"
            android:src="@drawable/alarm" />
        <ImageButton
            android:id="@+id/iv_pause"
            android:layout_marginTop="30dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/imgClock"
            android:scaleType="fitXY"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@color/transperant"
            android:src="@drawable/freezer"/>
        <TextView
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/iv_pause"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="tạm dừng"/>
    </RelativeLayout>

    <RelativeLayout
        android:visibility="gone"
        android:id="@+id/layout_quiz"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="35dp"
            android:text="hãy nhập lại dãy số sau"
            android:textAlignment="center"
            android:textSize="35sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_err"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nhập sai rồi"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:visibility="gone"
                android:layout_marginBottom="5dp"
                android:textColor="@color/item_background"
                android:textSize="30sp"/>
            <TextView
                android:id="@+id/tv_num_quiz"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="123456789"
                android:textAlignment="center"
                android:textSize="45sp" />

            <EditText
                android:id="@+id/input_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="nhập số"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:focusable="true"
                android:imeOptions="actionDone"
                android:inputType="numberSigned" />
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>