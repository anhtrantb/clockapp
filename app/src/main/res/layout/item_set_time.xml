<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="95dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginLeft="10dp"
    android:paddingLeft="25dp"
    android:paddingRight="25dp"
    android:layout_marginRight="10dp"
    android:layout_marginBottom="15dp"
    android:id="@+id/layout_item_alarm"
    >

    <ImageButton
        android:id="@+id/img_select_alarm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:background="@android:color/transparent"
        android:layout_marginRight="15dp"
        android:visibility="gone" />
    <RelativeLayout
        android:id="@+id/layout_text_time"
        android:layout_toRightOf="@+id/img_select_alarm"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <TextView
        android:id="@+id/tx_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto_light"
        android:text="TextView"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:textColor="@color/white"
        android:textSize="30sp" />
    <TextView
        android:id="@+id/name_alarm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="djsfha"
        android:paddingTop="5dp"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:layout_below="@+id/tx_time"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tx_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:paddingRight="15dp"
            android:text="TextView" />

        <Switch
            android:id="@+id/sw_setAlarm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="visible" />
    </LinearLayout>


</RelativeLayout>
